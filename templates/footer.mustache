const btn_line_height = document.getElementById('aulas-regional-access_line-height');

let maxLineHeigth = 0;
btn_line_height.addEventListener('click', function() {
    
    const elementos = document.querySelectorAll('p, span, h1, h2, h3, a');
   if(maxLineHeigth <= 3){
        elementos.forEach(function(elemento) {
            // Obtiene el valor actual de line-height y conviértelo de cadena a número
            let lineHeight = parseFloat(window.getComputedStyle(elemento).lineHeight);

            lineHeight += 2;
            elemento.style.lineHeight = `${lineHeight}px`;
        });
        maxLineHeigth += 1;
    }else{
        elementos.forEach(function(elemento) {
            elemento.removeAttribute("style");
            maxLineHeigth = 0;
        });
    }
       
        
        
        
    
    
});

