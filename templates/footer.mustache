let inc_font = document.getElementById('aulas-regional-access_font-increase');
let max_font = 3;
let actual_font = 1;
inc_font.addEventListener("focus", function(){
    inc_font.addEventListener('keydown', function(event) {
        if (event.keyCode === 32) {
            event.preventDefault();
            // Realiza la acción deseada, como ejecutar un click en el elemento
            inc_font.click();
        }
    });
});
inc_font.addEventListener("click", function(){
    if(actual_font <= max_font){
        let parrafs = document.getElementsByTagName("p");
        let h1s = document.getElementsByTagName("h1");
        let h2s = document.getElementsByTagName("h2");
        let h3s = document.getElementsByTagName("h3");
        let as = document.getElementsByTagName("a");
        for(parraf of parrafs) {
            let style = getComputedStyle(parraf);
            let add =  +style.fontSize.slice(0,-2) + 4;
            parraf.style.fontSize = add +'px';
        }
        for(h1 of h1s) {
            let style = getComputedStyle(h1);
            let add =  +style.fontSize.slice(0,-2) + 4;
            h1.style.fontSize = add +'px';
        }
        for(h2 of h2s) {
            let style = getComputedStyle(h2);
            let add =  +style.fontSize.slice(0,-2) + 4;
            h2.style.fontSize = add +'px';
        }
        for(h3 of h3s) {
            let style = getComputedStyle(h3);
            let add =  +style.fontSize.slice(0,-2) + 4;
            h3.style.fontSize = add +'px';
        }
        for(a of as) {
            let style = getComputedStyle(a);
            let add =  +style.fontSize.slice(0,-2) + 4;
            a.style.fontSize = add +'px';
        }
        actual_font++;
    }
});


