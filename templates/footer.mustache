let contrast = document.getElementById('aulas-regional-access_contraste');
let have_contrast = false;
contrast.addEventListener("focus", function(){
    contrast.addEventListener('keydown', function(event) {
        if (event.keyCode === 32) {
            event.preventDefault();
            // Realiza la acción deseada, como ejecutar un click en el elemento
            contrast.click();
        }
    });
});

contrast.addEventListener("click", function(){
    if(have_contrast){
        have_contrast = false;
         document.querySelector('body').classList.remove('add-gray');
        document.querySelector('body').classList.remove('add-contrast');
    }else{
        document.querySelector('body').classList.remove('add-gray');
        document.querySelector('body').classList.add('add-contrast');
        have_contrast = true;
    }
});

